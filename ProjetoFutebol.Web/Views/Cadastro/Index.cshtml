@model ProjetoFutebol.Web.ViewModels.CadastroViewModel

@{
    ViewData["Title"] = "Cadastre-se no FutFut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"]</div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Cadastro</h2>

    @using (Html.BeginForm("Cadastro", "Auth", FormMethod.Post, new { @class = "mx-auto w-50 border p-4 rounded shadow-sm bg-light" }))
    {
        <div class="mb-3">
            @Html.LabelFor(m => m.Nome, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Digite seu nome" })
            @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Email, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Digite seu email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Senha, new { @class = "form-label fw-bold" })
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Digite sua senha" })
            @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.ConfirmarSenha, new { @class = "form-label fw-bold" })
            @Html.PasswordFor(m => m.ConfirmarSenha, new { @class = "form-control", placeholder = "Confirme sua senha" })
            @Html.ValidationMessageFor(m => m.ConfirmarSenha, "", new { @class = "text-danger" })
        </div>

        <p class="text-center">
            Já tem uma conta? @Html.ActionLink("Faça login aqui", "Index", "Auth")
        </p>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Cadastrar</button>
        </div>
    }
</div>