@model List<ProjetoFutebol.Web.ViewModels.CampeonatoViewModel>

@{
    ViewData["Title"] = "Campeonatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Campeonatos</h2>

    <div class="accordion" id="accordionCampeonatos">
        @foreach (var campeonato in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@campeonato.CampeonatoID">
                    <button class="accordion-button collapsed d-flex justify-content-between align-items-center"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapse-@campeonato.CampeonatoID"
                            aria-expanded="false"
                            aria-controls="collapse-@campeonato.CampeonatoID">
                        <span>@campeonato.Nome</span>
                        <img src="@campeonato.Emblema" alt="Emblema @campeonato.Nome" width="30" class="ms-auto">
                    </button>
                </h2>
                <div id="collapse-@campeonato.CampeonatoID" class="accordion-collapse collapse" aria-labelledby="heading-@campeonato.CampeonatoID" data-bs-parent="#accordionCampeonatos">
                    <div class="accordion-body">
                        <h5>Partidas</h5>
                        @if (campeonato.Partidas.Any())
                        {
                            <ul class="list-group">
                                @foreach (var partida in campeonato.Partidas)
                                {
                                    <li class="list-group-item d-flex align-items-center">
                                        <img src="@partida.EmblemaCasa" alt="Emblema @partida.TimeCasa" width="30" class="me-2">
                                        <strong>@partida.TimeCasa</strong>
                                        <span class="mx-2"> @partida.PlacarCasa x @partida.PlacarFora </span>
                                        <strong>@partida.TimeFora</strong>
                                        <img src="@partida.EmblemaFora" alt="Emblema @partida.TimeFora" width="30" class="ms-2">
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>Não há partidas cadastradas para este campeonato.</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>