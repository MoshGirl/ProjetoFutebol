@model List<ProjetoFutebol.Web.ViewModels.PartidaViewModel>

@{
    ViewData["Title"] = "Página Inicial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">⚽ Partidas em Andamento</h2>

@if (Model.Any())
{
    <div class="container">
        @foreach (var grupo in Model.GroupBy(p => p.Competicao))
        {
            <div class="card mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">@grupo.Key</h5>
                </div>
                <div class="card-body">
                    @foreach (var partida in grupo)
                    {
                        <div class="row align-items-center mb-3">
                            <div class="col-md-4 text-center">
                                <img src="@partida.EmblemaCasa" alt="@partida.TimeCasa" width="50">
                                <strong>@partida.TimeCasa</strong>
                            </div>
                            <div class="col-md-4 text-center">
                                <span class="fs-4">@partida.PlacarCasa - @partida.PlacarFora</span>
                            </div>
                            <div class="col-md-4 text-center">
                                <img src="@partida.EmblemaFora" alt="@partida.TimeFora" width="50">
                                <strong>@partida.TimeFora</strong>
                            </div>
                        </div>
                        <hr>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">Nenhuma partida em andamento no momento.</p>
}