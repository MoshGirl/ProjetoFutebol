@model ProjetoFutebol.Web.ViewModels.AuthViewModel

@{
    ViewData["Title"] = "Faça seu Login no FutFut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Login</h2>

    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "mx-auto w-50 border p-4 rounded shadow-sm bg-light" }))
    {
        <div class="mb-3">
            @Html.LabelFor(m => m.Email, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Digite seu email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Senha, new { @class = "form-label fw-bold" })
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Digite sua senha" })
            @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
        </div>

        <p class="text-center">
            Não tem uma conta? @Html.ActionLink("Cadastre-se aqui", "Index", "Cadastro")
        </p>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Entrar</button>
        </div>
    }
</div>